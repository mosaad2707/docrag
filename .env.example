# ============================================
# Qdrant Configuration
# ============================================
QDRANT_URL=""
QDRANT_API_KEY=""   # Optional, only if your Qdrant instance requires it

PINECONE_API_KEY=""
# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=""
OPENAI_EMBEDDING_MODEL= text-embedding-3-small
OPENAI_LLM_MODEL= gpt-4o

# ============================================
# Embedding Model Configuration
# ============================================
# Options: "openai" or "custom"
EMBEDDING_MODEL_TYPE= openai

# If EMBEDDING_MODEL_TYPE is "custom", set the Hugging Face model name
CUSTOM_EMBEDDING_MODEL_NAME= all-MiniLM-L6-v2

# Device for running custom models
# Options: "cpu", "cuda", "mps"
EMBEDDING_DEVICE= cpu

# ============================================
# Reranker Configuration
# ============================================
RERANKER_MODEL_NAME= cross-encoder/ms-marco-MiniLM-L-6-v2

# ============================================
# Document Processing Configuration
# ============================================
# OCR provider options: "tesseract" or "easyocr"
# - For Tesseract: install system package and make sure it's in PATH
# - For EasyOCR: it will be downloaded automatically
OCR_PROVIDER= easyocr

# ============================================
# RAG Configuration
# ============================================
CHUNK_SIZE= 1024
CHUNK_OVERLAP= 100
TOP_K_RETRIEVAL= 10
TOP_K_RERANK= 4